{
    "app-id": "org.splash.Splash",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "splash",
    "rename-desktop-file": "splash.desktop",
    "rename-icon": "splash",
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--device=all",
        "--filesystem=host"
    ],
    "cleanup": [
        "/bin/gsl_*",
        "/bin/opencv_*",
        "/include",
        "/lib/debug",
        "/share/OpenCV",
        "/share/info",
        "/share/man",
        "*.a",
        "*.la",
        "*.cmake"
    ],
    "modules": [
        {
            "name": "opencv",
            "buildsystem": "cmake",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/opencv/opencv.git",
                    "tag": "3.4.3",
                    "commit": "b38c50b3d0c31e82294315ec44b54b7ef559ef12"
                }
            ]
        },
        {
            "name": "portaudio",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.assembla.com/portaudio.git",
                    "tag": "pa_stable_v190600_20161030",
                    "commit": "396fe4b6699ae929d3a685b3ef8a7e97396139a4"
                }
            ]
        },
        {
            "name": "gsl",
            "config-opts": [
                "--enable-shared",
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://mirror.sergal.org/gnu/gsl/gsl-2.5.tar.gz",
                    "sha256": "0460ad7c2542caaddc6729762952d345374784100223995eb14d614861f2258d"
                }
            ]
        },
        {
            "name": "jsoncpp",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/open-source-parsers/jsoncpp",
                    "tag": "1.8.4",
                    "commit": "ddabf50f72cf369bf652a95c4d9fe31a1865a781"
                }
            ]
        },
        {
            "name": "splash",
            "buildsystem": "simple",
            "config-opts": [
                "-DBUILD_GENERIC_ARCH=ON"
            ],
            "build-commands": [
                "./make_deps.sh",
                "cmake -DBUILD_GENERIC_ARCH=ON -DCMAKE_INSTALL_PREFIX=/app .",
                "make -j$(if [[ -z ${FLATPAK_BUILD_N_JOBS} ]]; then echo $(nproc); else echo ${FLATPAK_BUILD_N_JOBS}; fi)",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/sat-metalab/splash.git",
                    "commit": "bab9acdeea14bc89c4830090ca68a64d18462378"
                }
            ]
        }
    ]
}
